package nestedForLoops;
import java.util.Scanner;

public class PatternRelatedQuestions {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		for(int i =1 ; i<=n; i++) {
			for(int j=1 ; j<=i-2; j++) {
				System.out.print("  ");
			}
			for(int j=2;j<=n-i+1; j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		

	}

}
