package nestedForLoops;
import java.util.Scanner;

public class AdvancedProblems {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int n= sc.nextInt();
		for(int i=1; i<=n; i++) {
			for(int j=1; j<=n-i; j++) {
				System.out.print("  ");
			}
			for(int a=1; a<=n; a++) {
				System.out.print("*  ");
			}
			System.out.println();
		}
	}

}
